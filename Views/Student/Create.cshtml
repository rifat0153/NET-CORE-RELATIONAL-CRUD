@model ForeignKey.Models.StudentCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.student.Name" class="control-label"></label>
                <input asp-for="@Model.student.Name" name="StudentName" class="form-control" value="@Model.student.Name" />
                <span asp-validation-for="@Model.student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.student.CourseId" class="control-label"></label>
                <select asp-for="@Model.student.CourseId" name="CourseId" class="form-control" asp-items="ViewBag.CourseId">
                    @foreach (var item in Model.courses)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="hidden" value="@Model.student.Id" name="Id" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

